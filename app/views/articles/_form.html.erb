
<%= render 'shared/errors', obj: @article %> <!-- passes @article into obj that then is used in _errors.html -->

<%= form_with(model: @article, class: "shadow px-4 pb-1 pt-3 bg-light rounded", local: true ) do |form| %>
  <div class="form-group row">
    <label>Title</label>
    <%= form.text_field :title, class: 'form-control', placeholder: "Title of article"  %>
  </div>
  <div class="form-group row">
    <label>Description</label><br>
    <%= form.text_area :description, rows: 10, class: 'form-control', placeholder: "Description of article" %>
  </div>
  <div class="form-group row" style="display: flex; flex-direction: column;" >
    <label>Category</label>
    <%= form.collection_select( :category_ids, Category.all, :id, :name, { prompt: "Make your selection from the list below (can be empty)"}, {multiple: true, class: "custom-select"})%>
  </div>
    <div class="form-group row">
      <%= form.submit class: "btn btn-outline-dark btn-lg" %>
    </div>
<% end %>

<div class="container text-center my-3">
<%= link_to '[ Cancel and return to articles listing ]', articles_path %>
</div>

