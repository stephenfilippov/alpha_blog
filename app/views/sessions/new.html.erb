<div class="container mt-5">
    <h1 class="my-3 text-center" >Login</h1>
    <%= form_with(scope: :session, url: login_path, class: "shadow px-4 pb-1 pt-3 bg-light rounded", local: true ) do |form| %>
    <div class="form-group row">
        <label>Email</label><br>
        <%= form.email_field :email, class: 'form-control', placeholder: "Enter your email address" %>
    </div>
    <div class="form-group row">
        <label>Password</label><br>
        <%= form.password_field :password, class: 'form-control', placeholder: "Enter your password" %>
    </div>
    <div class="form-group row">
        <%= form.submit "Log in", class: "btn btn-outline-dark btn-lg" %>
    </div>
    <% end %>
</div>

<div class="container text-center my-5">
  <%= link_to '[ Cancel and return to articles listing ]', articles_path %>
</div>