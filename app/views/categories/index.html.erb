<h1 class="text-center my-5">Categories</h1>

  <div class="flickr_pagination my-4">
    <%= will_paginate @categories, :container => false %>
  </div>

<% @categories.each do |category|%>
<div class="row justify-content-md-center">
    <div class="col-4">
    <div class="card text-center mb-5 shadow bg-white rounded">
        <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-success' %></h5>
            <h5 class="my-3"> <%= pluralize(category.articles.count, "article")%> </h5>
        </div>
        <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(category.created_at)%> ago, Edited <%= time_ago_in_words(category.updated_at)%> ago</small>
        </div>
        </div>
    </div>
</div>
<%end%>

 <div class="flickr_pagination my-4">
   <%= will_paginate @categories, :container => false %>
</div>