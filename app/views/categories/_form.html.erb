<%= render 'shared/errors' , obj: @category %> 

<%= form_with(model: @category, class: "shadow px-4 pb-1 pt-3 bg-light rounded", local: true ) do |form| %>
  <div class="form-group row">
    <label>Category name</label>
    <%= form.text_field :name, class: 'form-control', placeholder: "Enter a name"  %>
  </div>
  <div class="form-group row">
    <%= form.submit class: "btn btn-outline-dark btn-lg" %>
  </div>
<% end %>

